generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  name            String
  email           String    @unique
  password        String?
  image           String?
  refreshToken    String?
  isVerifiedEmail DateTime?
  createdAt       DateTime? @default(now())
  updatedAt       DateTime  @updatedAt
}

model File {
  id   String @id @default(cuid())
  name String
  size Int
  type String
  url  String

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now()) @updatedAt
}
